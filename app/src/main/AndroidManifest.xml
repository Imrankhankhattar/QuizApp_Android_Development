        android:supportsRtl="true"
        android:theme="@style/AppthemeNoActionBar">
        <activity android:name=".activities.profileActivity"></activity>
        <activity android:name=".activities.resultActivity" />
        <activity
            android:name=".activities.questionActivity"
            android:theme="@style/Theme.QuizApp" />
        <activity android:name=".activities.sineup_activity" >

        </activity>
        <activity android:name=".activities.login_activity" />
        <activity android:name=".activities.login_intro" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity">
        </activity>
    </application>

</manifest>